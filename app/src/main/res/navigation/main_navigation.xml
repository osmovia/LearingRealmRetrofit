<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/tabsFragment">
    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.example.learingrealmandretrofit.fragment.TabsFragment"
        android:label="TabsFragment"
        tools:layout="@layout/fragment_tabs"/>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.learingrealmandretrofit.fragment.RegistrationFragment"
        android:label="RegistrationFragment"
        tools:layout="@layout/registration_fragment">
        <action
            android:id="@+id/action_registrationFragment_to_tabsFragment"
            app:destination="@id/tabsFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
