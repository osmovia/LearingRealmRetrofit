<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deck"
    app:startDestination="@id/deckFragment">

    <fragment
        android:id="@+id/deckFragment"
        android:name="com.example.learingrealmandretrofit.fragment.DeckFragment"
        android:label="DeckFragment"
        tools:layout="@layout/deck_fragment_recycler">
        <action
            android:id="@+id/action_deckFragment_to_insideDeckCardFragment"
            app:destination="@id/insideDeckCardFragment" />
        <action
            android:id="@+id/action_deckFragment_to_dialogDeleteDeck"
            app:destination="@id/dialogDeleteDeck" />
        <action
            android:id="@+id/action_deckFragment_to_dialogCreateOrChangeDeck"
            app:destination="@id/dialogCreateOrChangeDeck" />
    </fragment>
    <dialog
        android:id="@+id/dialogCreateOrChangeDeck"
        android:name="com.example.learingrealmandretrofit.fragment.DialogCreateOrChangeDeck"
        android:label="DialogCreateOrChangeDeck"
        tools:layout="@layout/dialog_create_or_update_deck"/>
    <fragment
        android:id="@+id/insideDeckCardDeleteDialog"
        android:name="com.example.learingrealmandretrofit.fragment.insidedeck.InsideDeckDeleteCardDialog"
        android:label="InsideDeckCardDeleteDialog"
        tools:layout="@layout/dialog_delete_card_and_from_list"/>
    <fragment
        android:id="@+id/insideDeckCardFragment"
        android:name="com.example.learingrealmandretrofit.fragment.insidedeck.InsideDeckCardFragment"
        android:label="{titleToolbar}"
        tools:layout="@layout/card_fragment_recycler">
        <action
            android:id="@+id/action_insideDeckCardFragment_to_dialogCreateOrChangeDeck"
            app:destination="@id/dialogCreateOrChangeDeck" />
        <action
            android:id="@+id/action_insideDeckCardFragment_to_insideDeckUpdateCardDialog"
            app:destination="@id/insideDeckUpdateCardDialog" />
        <action
            android:id="@+id/action_insideDeckCardFragment_to_insideDeckCardDeleteDialog"
            app:destination="@id/insideDeckCardDeleteDialog" />
        <argument
            android:name="titleToolbar"
            app:argType="string" />
        <argument
            android:name="deck"
            app:argType="com.example.learingrealmandretrofit.objects.Deck" />
    </fragment>
    <dialog
        android:id="@+id/insideDeckUpdateCardDialog"
        android:name="com.example.learingrealmandretrofit.fragment.insidedeck.InsideDeckUpdateCardDialog"
        android:label="InsideDeckUpdateCardDialog"
        tools:layout="@layout/dialog_create_or_change_card"/>
    <dialog
        android:id="@+id/dialogDeleteDeck"
        android:name="com.example.learingrealmandretrofit.fragment.DialogDeleteDeck"
        android:label="DialogDeleteDeck"
        tools:layout="@layout/dialog_delete_deck"/>
</navigation>
