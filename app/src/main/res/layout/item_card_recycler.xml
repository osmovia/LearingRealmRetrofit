<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardForRecyclerLayoutId"
    android:gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/itemContainerCard"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewOriginal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/pure_black"
                android:textColorHighlight="@color/pure_black"
                android:textColorHint="@color/pure_black"
                android:textColorLink="@color/black"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/textViewTranslate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="@color/dark_gray"
                android:textColorHighlight="@color/dark_gray"
                android:textColorHint="@color/dark_gray"
                android:textColorLink="@color/dark_gray"
                android:textSize="20sp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
